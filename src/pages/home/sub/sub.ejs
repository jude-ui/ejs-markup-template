<%#
  {
    'group': '그룹 1',
    'depth': '1. 홈__2. sub 페이지'
  }
#%>
<%
  const depth = 2;
  const thumbImg = (sizeX = 200, sizeY = 200) => `http://via.placeholder.com/${sizeX}x${sizeY}`;
  const _src = '../'.repeat(depth + 1);
  const _components = _src + 'components/';
  const _images = _src + 'images/';
%>

<!DOCTYPE html>
<html lang="ko">
<head>
<%- include(
  `${_components}_head`,
  {
    title: 'sub page',
    _src
  }
) %>
</head>
<body>
<div class="container-doc">
  <%- include(_components + '_header') %>

  <main class="doc-main">
    <article class="content-article">
      <h2>{main-article 제목}</h2>
      <ul>
        <% for( let i = 0; i < 10; i++ ) { %>
          <li>index : <%= i %> , count : <%= i + 1 %></li>
        <% } %>
      </ul>
      <img src="<%= thumbImg() %>" width="100" height="100" alt=""><br>
      <img src="<%= _images %>temp_covscroll.jpg" width="140" height="91" alt="">
      <div class="tag_plain"></div>

      <%- include(_components + '_card', {
        _src
      }) %>
    </article>
  </main>
  
  <%- include(_components + '_footer') %>
</div>
</body>
</html>